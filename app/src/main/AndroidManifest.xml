<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.szut.passkeeper" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MaterialLightTheme" >
        <activity
            android:name=".Activity.StartActivity"
            android:label="@string/app_name"
            android:theme="@style/MaterLightNoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.CreateDatabaseActivity"
            android:label="@string/title_activity_create_database" />
        <activity
            android:name=".Activity.ListDatabaseActivity"
            android:label="@string/title_activity_chose_database" />
        <activity android:name=".Activity.ListCategoryActivity" />
        <activity android:name=".Activity.ListEntryActivity" />
        <activity android:name=".Activity.CreateEntryActivity" />
        <activity android:name=".Activity.CardViewDatabaseActivity" />
        <activity
            android:name=".Activity.UpdateEntryActivity"
            android:label="@string/title_activity_update_entry" >
        </activity>
    </application>

</manifest>
